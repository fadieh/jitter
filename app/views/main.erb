<!-- Use jQuery to create a modal for this later -->
<div id="new-cheep">
	<% if current_user %>
	<form action="/cheeps" method="post">
		<input type="text" name="message" placeholder="Say hello...">
		<input id="post" type="submit" value="Post">
	</form>
</div>
<% end %>

<ul id="cheeps">
	<% @cheeps.each do |cheep| %>
	<li><%= cheep.message %><br>
		@<%= cheep.username %><br>
		<%= cheep.favourites %><br>
		<%= cheep.created_at %><br>

		<a href="/favourite/<%= cheep.id %>">Favourite</a><br>

		<% if cheep.username == current_user.username %>
		<a href="/delete/<%= cheep.id %>">Delete</a>
		<% end %>

	</li>
	<% end %>
</ul>
